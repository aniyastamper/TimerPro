<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimerPro.MainPage">

   <StackLayout Padding="20,20">
       <Label x:Name="lblDisplay" Text="00:00:00" FontSize="Title" HorizontalOptions="Center" Margin="0,80"/>
       
       <Button x:Name="btnStart" Text="Start" Clicked="Start_OnClicked"/>
       <Button x:Name="btnStop" Text="Stop" Margin="0,30" IsEnabled="False" Clicked="btnStop_OnClicked"/>
       <Button Text="Reset" Clicked="Reset_OnClicked"/>
       
   </StackLayout>

</ContentPage>
